        </ul>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        @RenderSection("scripts", false)
        <div class="wrapper">
            <div class="content"></div>
            <footer>
                <hr />
                <p>&copy; @DateTime.Now.Year -  PhotoStore</p>
